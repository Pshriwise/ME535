function [tri] = quadmat2tris( mat ) 

% mat - a matrix of points for a surface

[ a b c ] = size(mat);

num_tris = 0;
for i = 0:a-2
    for j = 1:b-1 
        
        %create two triangles for each quad in the matrix
        num_tris = num_tris +1; 
        tri(num_tris,:) = [ i*b+j (i+1)*b+j i*b+(j+1)];
        
        num_tris = num_tris +1;
        tri(num_tris,:) = [ i*b+(j) (i+1)*b+(j+1) (i)*b+(j+1)];
        
    end
end
